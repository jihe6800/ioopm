public class Main {
    public static void main(String[] args) {
	MealBuilder mealBuilder = new MealBuilder();

	Meal vegMeal = mealBuilder.prepareVegMeal();
	System.out.println("\033[1mVegitarian Meal\033[0m:");
	vegMeal.showItems();
	System.out.println("\u001B[31mTotal Cost: " + vegMeal.getCost() + "\n");

	Meal chickenMeal = mealBuilder.prepareChickenMeal();
	System.out.println("\033[1mChicken Meal\033[0m:");
	chickenMeal.showItems();
	System.out.println("\u001B[31mTotal Cost: " + chickenMeal.getCost() + "\n");


	Meal regularMeal = mealBuilder.prepareRegularMeal();
	System.out.println("\033[1mRegular Meal\033[0m:");
	regularMeal.showItems();
	System.out.println("\u001B[31mTotal Cost: " + regularMeal.getCost() + "\n");
    }
}